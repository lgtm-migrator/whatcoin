{
  "name": "whatcoin",
  "version": "0.6.0",
  "description": "A telegram bot providing cryptocurrency price/market info and calculations",
  "author": "David D. Rolle",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "func start",
    "lint": "eslint \"**/*.js\" && prettier -c \"**/*.{js,css,md,json}\" --ignore-path .gitignore",
    "lint:fix": "eslint --fix \"**/*.js\" && prettier -w \"**/*.{js,css,md,json}\" --ignore-path .gitignore",
    "test": "jest --ci",
    "test:update-snapshots": "jest -u",
    "test:watch": "jest --watchAll",
    "update-deps": "npx ncu --doctor -u",
    "release": "npx ncu -e2 && npx np --no-publish --no-yarn"
  },
  "dependencies": {
    "coingecko-api": "^1.0.10",
    "serverless-telegram": "^0.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "eslint": "^7.18.0",
    "eslint-plugin-jest": "^24.1.3",
    "filenamify": "^4.2.0",
    "husky": "3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nock": "^13.0.7",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,json}": "prettier --write"
  }
}
